---
/**
 * スライダーUI：フリップ エフェクト
 */

interface Props {
  trgClass: 'js-flipSwiper' | 'js-cardSwiper';
}

const { trgClass } = Astro.props;
---

<p class="text-secondary mb-2 text-center text-lg font-bold">フリップ</p>
<div class=`swiper ${trgClass}`>
  <ul class="swiper-wrapper">
    {
      ['bg-yellow-500', 'bg-blue-500', 'bg-red-500', 'bg-green-500', 'bg-pink-500'].map(
        (slide, index) => (
          <li class={`swiper-slide aspect-square h-full w-full`}>
            <div
              class={`flex h-full w-full items-center justify-center rounded-lg text-xl font-bold text-white ${slide}`}
            >
              スライド {index + 1}
            </div>
          </li>
        ),
      )
    }
  </ul>
</div>
