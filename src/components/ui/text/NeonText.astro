---
/**
 * UI：テキスト
 * text-shadowを使ったネオン看板風テキスト
 * - color：カラーコード or CSS変数（基準色）
 * - as：htmlタグ
 * */
import type { HTMLTag, Polymorphic } from 'astro/types';
import type { string } from 'astro:schema';

type Props<Tag extends HTMLTag = 'h1'> = Polymorphic<{
  as: Tag;
  color?: string;
  txtColor?: string;
  css?: string;
}>;

const { as: Tag = 'h1', color = '#ff0040', txtColor = '#fff', css = '' } = Astro.props;
---

<Tag
  class=`neon-text ${css && css}`
  style={`--neon-color: ${color}; --neon-text-color: ${txtColor}`}
>
  <slot />
</Tag>

<style>
  .neon-text {
    /* 文字色 */
    --tc: var(--neon-text-color);
    color: var(--tc);

    /* 基本色 */
    --c: var(--neon-color);

    text-shadow:
      0 0 1px var(--tc),
      0 0 4px var(--c),
      0 0 8px var(--c),
      0 0 12px var(--c),
      0 0 28px var(--c),
      0 8px 3px rgba(0, 0, 0, 0.4);
  }
</style>
