---
/**
 * Base UI：ハンバーガーボタン
 */
---

<button
  aria-label="ナビ開閉ボタン"
  class="hamburger min_md:hidden hover:text-zinc-100"
  id="js-gnav-trg"
>
  <div class="hamburger__container">
    <span class="hamburger__item"></span><span class="hamburger__item"></span><span
      class="hamburger__item"></span>
  </div>
</button>

<style>
  @reference "../../styles/style.css";

  /* ハンバーガーボタン */
  .hamburger {
    --line-color: var(--color-primary);

    display: flex;
    position: relative;
    justify-content: center;
    align-items: center;
    z-index: 200;
    cursor: pointer;
    border: var(--line-color) 2px solid;
    border-radius: 50rem;
    background-color: white;
    padding: 0;
    width: 3.2rem;
    height: 3.2rem;
  }

  .hamburger__container {
    display: block;
    position: relative;
    margin: auto;
    width: 1.5rem;
    height: 1.3rem;
  }

  .hamburger__item {
    display: block;
    position: absolute;
    left: 0;
    transition: all 0.5s ease-out;
    margin: auto;
    background-color: var(--line-color);
    width: 100%;
    height: 2px;
  }
  .hamburger__container > :nth-child(1) {
    top: 0;
  }
  .hamburger__container > :nth-child(2) {
    top: 0;
    bottom: 0;
    width: 100%;
  }
  .hamburger__container > :nth-child(3) {
    bottom: 0;
  }
  .hamburger.is-active .hamburger__container > :nth-child(1) {
    top: 48%;
    transform: rotate(45deg);
  }
  .hamburger.is-active .hamburger__container > :nth-child(2) {
    opacity: 0;
  }
  .hamburger.is-active .hamburger__container > :nth-child(3) {
    bottom: 43%;
    transform: rotate(-45deg);
  }
</style>
